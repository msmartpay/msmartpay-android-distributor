<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/add_agent_form">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/colorLogin"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/personal_details"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Personal Details"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/personal_details"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your First Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Last Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/viewdob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tview_dob"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:hint="Date Of Birth (YYYY-MM-DD)"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin"
                            android:textColorHint="#999999"
                            android:textSize="18dp"
                            android:textStyle="normal" />

                        <ImageButton
                            android:id="@+id/imagedob"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/calendar"
                            android:visibility="gone" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:popupBackground="@color/spinnerColor"/>

                    <Spinner
                        android:id="@+id/spinner_company_type"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:popupBackground="@color/spinnerColor"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Company/Firm/Shop Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_emailID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Email ID"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_mobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Mobile Number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                        android:id="@+id/linear1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Address Details"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_address1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Address 1"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_address2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Address 2"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinner_country_list"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:popupBackground="@color/spinnerColor"/>

                    <Spinner
                        android:id="@+id/spinner_state_list"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:popupBackground="@color/spinnerColor"/>

                    <Spinner
                        android:id="@+id/spinner_district_list"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:popupBackground="@color/spinnerColor"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your City Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Pin Code"
                            android:inputType="number"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="PAN Details"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#999999">

                        <EditText
                            android:id="@+id/edit_PAN_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your PAN Number (Optional)"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:textColor="@color/colorLogin" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_agent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/flat_selector"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>