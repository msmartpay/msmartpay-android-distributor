<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/colorLogin"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/sp_kyc_document"
        style="@style/sp_material"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        app:smsp_enableErrorLabel="false"
        app:smsp_hint="Select Document Type"
        app:smsp_itemColor="@color/sp_itemColor"
        app:smsp_itemListColor="@color/sp_itemListColor"
        app:smsp_itemListHintBackgroundColor="@color/sp_itemListHintBackgroundColor"
        app:smsp_itemListHintColor="@color/sp_itemListHintColor"
        app:smsp_itemSize="@dimen/sp_size"
        app:smsp_selectedItemListColor="@color/sp_itemListSelectedColor"
        app:smsp_underlineColor="@color/sp_underlineColor" />
    <LinearLayout
        android:id="@+id/ll_upload_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/sp_kyc_document">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kyc_select"
            style="@style/Button"
            android:layout_gravity="left"
            android:background="@drawable/round_border"
            android:layout_height="30dp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:text="Select Document"
            android:textColor="@color/colorWhite"
            android:textSize="10.0dip" />

        <ImageView
            android:id="@+id/iv_file"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:onClick="start"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:src="@drawable/default_photo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kyc_upload"
            style="@style/Button"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_upload_header"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_orange"
            android:foreground="?selectableItemBackgroundBorderless"
            android:text="Upload Document"
            android:textColor="@color/colorWhite"
            android:textSize="10.0dip" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kyc_status_update"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/btn_kyc_upload"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:text="Activate KYC"
            android:textColor="@color/colorWhite"
            android:textSize="10.0dip" />

        </LinearLayout>



    <View
        android:id="@+id/view"
        android:layout_below="@+id/btn_kyc_status_update"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#aaa"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_kyc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp" />

</LinearLayout>