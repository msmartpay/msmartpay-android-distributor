<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ccc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:elevation="5dp"
        android:background="@color/colorLogin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="2dip"
        android:background="@drawable/add_agent_form">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/activity_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/smartkinda_logo" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/broder_edittext"
            android:hint="Enter First Name"
            android:textColorHint="#999999"
            android:textColor="@color/colorLogin"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/broder_edittext"
            android:hint="Enter Last Name"
            android:textColorHint="#999999"
            android:textColor="@color/colorLogin"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/broder_edittext"
            android:hint="Enter Email ID"
            android:textColorHint="#999999"
            android:textColor="@color/colorLogin"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/broder_edittext"
            android:hint="Enter Mobile Number"
            android:textColorHint="#999999"
            android:textColor="@color/colorLogin"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="10dp" />

        <EditText
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/broder_edittext"
            android:hint="Enter Company Name"
            android:textColorHint="#999999"
            android:textColor="@color/colorLogin"
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp" />

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorLogin"
            android:text="Sign Up"
            android:textSize="18.0dip"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="2">
        <TextView
            android:id="@+id/copy_rights"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Copyright Â© RITDF"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:background="@color/colorLogin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Powered By Soft Solution Zone"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_alignEnd="@+id/copy_rights"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:background="@color/colorLogin"/>
    </TableRow>

</LinearLayout>