<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ccc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:elevation="5dp"
        android:background="@color/colorLogin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/add_agent_form">

    <LinearLayout
        android:id="@+id/activity_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:padding="10dp"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_search_grey_500_24dp"
            android:drawablePadding="5dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorWhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/colorLoginDark">

            <TextView
                android:id="@+id/tv_agent_id"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="45dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="ID"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="Firm Name"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Action"
                android:paddingRight="10dp"
                android:textSize="18dp"
                android:gravity="right"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLogin"/>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </ListView>


    </LinearLayout>

</LinearLayout>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="2"
        android:visibility="gone">
        <TextView
            android:id="@+id/copy_rights"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Copyright Â© RITDF"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:background="@color/colorLogin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Powered By Soft Solution Zone"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_alignEnd="@+id/copy_rights"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:background="@color/colorLogin"/>
    </TableRow>

</LinearLayout>